alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias {q,qq,:q,Q}="exit"

alias e="nvim"
alias c="clear"
alias r="ranger"
alias ll="ls -lA"
alias rcp="cp -r"
alias rrm="rm -r"
alias cpl="copypath"
alias cpf="copyfile"
alias pg="ping -c 4"
alias cls="clear; ls"
alias ka="killall -q"
alias clcf="c; cpufetch"
alias cltr="gio trash --empty"
alias tclock="tty-clock -sctx"
alias probe="xprop | grep WM_CLASS"
alias swp="feh --no-fehbg --bg-scale"
alias z="zathura $1 --mode fullscreen"
alias sww="setsid -f $1 > /dev/null 2>&1"
alias clff="c; colorscript -r; fastfetch"
alias edit-grub="sudo nvim /etc/default/grub"
alias rd="ranger --cmd='set viewmode=multipane' ~/ ~/"
alias wget="wget --hsts-file='$XDG_DATA_HOME/wget-hsts'"
alias la="eza -a --color=always --icons --group-directories-first"
alias ls="eza -aG --color=always --icons --group-directories-first"
alias irs="irssi --config='$XDG_CONFIG_HOME'/irssi/config --home='$XDG_DATA_HOME'/irssi"

# Git opertions
alias gitl="git log"
alias gitd="git diff"
alias gitp="git push"
alias gita="git add ."
alias gitc="git clone"
alias gits="git status"
alias gitch="git checkout"
alias gitcm="git commit -m"

# Different Spicetify themes
alias sslt="spicetify config color_scheme Nord current_theme Sleek && spicetify apply"
alias sndt="spicetify config color_scheme Nord current_theme Nord && spicetify apply"
alias sgbt="spicetify config color_scheme Dark current_theme Gruvbox && spicetify apply"
alias sdct="spicetify config color_scheme Dark current_theme Dracula && spicetify apply"
alias sodt="spicetify config color_scheme Dark current_theme OneDark && spicetify apply"
alias skgt="spicetify config color_scheme Kanagawa current_theme Ziro && spicetify apply"
alias seft="spicetify config color_scheme Dark current_theme Everforest && spicetify apply"

# DNF package manager
alias rpmi="sudo rpm -i"
alias rpme="sudo rpm -e"
alias rpmr="sudo rpm --reinstall"
alias sysctl="sudo systemctl"
alias searchp="sudo dnf search"
alias removep="sudo dnf -y remove"
alias installp="sudo dnf -y install"
alias autorem="sudo dnf -y autoremove"
alias reinstallp="sudo dnf -y reinstall"
alias enablerp="sudo dnf config-manager --set-enabled"
alias disablerp="sudo dnf config-manager --set-disabled"
alias upday="sudo dnf update -y; sudo dnf upgrade -y; sudo flatpak update" 

# Operations with Docker & Docker Containers
alias dock="sudo docker"
alias kill-docker="docker stop $1 && docker rm $1"
alias stop-docker="systemctl stop docker && systemctl --user stop docker-desktop"
alias start-docker="systemctl start docker && systemctl --user start docker-desktop"


