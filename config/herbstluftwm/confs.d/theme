
# RESET THEME #
#-------------#
hc_a theme.reset 1
hc_a theme.tiling.reset 1
hc_a theme.floating.reset 1

# IMPORT COLORSSCHEME #
#---------------------#
source $HOME/.config/herbstluftwm/themes/nord

# FRAMES #
#--------#
hc_s frame_gap 0
hc_s frame_padding 0
hc_s frame_border_width 0
hc_s frame_bg_transparent 1
hc_s frame_transparent_width 0
hc_s frame_border_active_color $Active
hc_s frame_bg_active_color $Active
hc_s frame_border_normal_color $Normal
hc_s frame_bg_normal_color $Normal
hc_s always_show_frame 0

# CONTAINERS #
#------------#
hc_a theme.title_color $Active
hc_a theme.title_height 15
hc_a theme.padding_top 0
hc_a theme.padding_bottom 0
hc_a theme.padding_left 0
hc_a theme.padding_right 0
hc_a theme.inner_width 0

hc_a theme.active.color $Active
hc_a theme.active.outer_color $Active
hc_a theme.active.title_color $Active
hc_a theme.active.border_width 2

hc_a theme.normal.color $Normal
hc_a theme.normal.outer_color $Normal
hc_a theme.normal.title_color $Normal
hc_a theme.normal.border_width 2

hc_a theme.urgent.color $Urgent
hc_a theme.urgent.outer_color $Urgent
hc_a theme.urgent.title_color $Urgent
hc_a theme.urgent.border_width 4

hc_a theme.floating.color $Floating
hc_a theme.floating.outer_color $Floating
hc_a theme.floating.title_color $Floating
hc_a theme.floating.normal.color $Normal
hc_a theme.floating.normal.outer_color $Normal
hc_a theme.floating.normal.title_color $Normal
hc_a theme.floating.title_height 30
hc_a theme.floating.border_width 6

hc_s window_gap 4
hc_s smart_window_surroundings 0
hc_s smart_frame_surroundings 1
hc_s mouse_recenter_gap 0

